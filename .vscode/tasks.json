{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "${workspaceRoot}/build.bat",
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "${workspaceRoot}/Testbuild.bat",
            "problemMatcher": [
                "$msCompile"
            ],
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}